<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <!-- FONDOS -->

    <ImageView
        android:id="@+id/fondorecom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fondorecom2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/recomfondo1" />

    <ImageView
        android:id="@+id/fondorecom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fondorecom3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/recomfondo1" />

    <ImageView
        android:id="@+id/fondorecom3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/recomfondo1" />

    <!-- TITULOS -->

    <TextView
        android:id="@+id/titulo1pag2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fondorecom1"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titulo2pag2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fondorecom2"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titulo3pag2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fondorecom3"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <!-- RECOMENDACIONES -->

    <TextView
        android:id="@+id/recom1pag2"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo1pag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="..."
        android:textColor="#AAA"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/recom2pag2"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo2pag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="..."
        android:textColor="#AAA"
        android:textSize="15sp" />x`

    <TextView
        android:id="@+id/recom3pag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo3pag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxWidth="230dp"
        android:text="..."
        android:textColor="#AAA"
        android:textSize="15sp" />


    <!-- OCULTAR BOTONES -->


    <!-- Botones de arriba -->

    <Button
        android:id="@+id/bspam1pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/fondorecom3"
        android:layout_alignRight="@+id/recom2pag2"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/botonspam"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bnomegusta1pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bspam1pag2"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/bspam1pag2"
        android:background="@drawable/botonnomegusta"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bmegusta1pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bnomegusta1pag2"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/bnomegusta1pag2"
        android:background="@drawable/botonmegusta"
        android:visibility="invisible" />

    <!-- Botones de en medio -->

    <Button
        android:id="@+id/bspam2pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/fondorecom2"
        android:layout_alignRight="@+id/recom2pag2"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/botonspam"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bnomegusta2pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bspam2pag2"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/bspam2pag2"
        android:background="@drawable/botonnomegusta"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bmegusta2pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bnomegusta2pag2"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/bnomegusta2pag2"
        android:background="@drawable/botonmegusta"
        android:visibility="invisible" />

    <!-- Botones de hasta abajo -->

    <Button
        android:id="@+id/bspam3pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/fondorecom1"
        android:layout_alignRight="@+id/recom2pag2"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/botonspam"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bnomegusta3pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bspam3pag2"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/bspam3pag2"
        android:background="@drawable/botonnomegusta"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bmegusta3pag2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bnomegusta3pag2"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/bnomegusta3pag2"
        android:background="@drawable/botonmegusta"
        android:visibility="invisible" />

</RelativeLayout>